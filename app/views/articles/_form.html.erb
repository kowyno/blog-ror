<%= form_with model: article do |form| %>
  <div class="mb-6">
    <%= form.label :title, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :title, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="text-red-500 text-sm mt-1"> <%= message %> </div>
    <% end %>
  </div>
  <div class="mb-6">
    <%= form.label :body, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.rich_textarea :body, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400 min-h-[120px]" %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="text-red-500 text-sm mt-1"> <%= message %> </div>
    <% end %>
  </div>
  <div>
    <button type="submit" class="flex items-center gap-2 px-6 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded font-semibold transition">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536M9 13l6.586-6.586a2 2 0 112.828 2.828L11.828 15.828a2 2 0 01-2.828 0L9 13zm0 0V21h8" />
      </svg>
      <span><%= article.persisted? ? 'Actualizar artículo' : 'Crear artículo' %></span>
    </button>
  </div>
<% end %>