    <div class="flex items-center gap-2 mb-2">
      <%= icon_user %>
      <span class="text-sm text-gray-600">Comentando como: <strong><%= user_display_name(current_user) %></strong></span>
    </div>
  </div>
  <div class="mb-4">
    <%= form.label :body, "Tu comentario", class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_area :body, placeholder: "Escribe tu comentario aquÃ­...", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400 min-h-[80px]" %>
  </div>
  <div>
    <button type="submit" class="flex flex-row items-center space-x-2 px-5 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded font-semibold transition">
